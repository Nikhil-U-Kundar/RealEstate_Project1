    <script>
        // Get the input element
const searchInput = document.getElementById('propertySearch');

// Add event listener
searchInput.addEventListener('input', function() {
    const searchQuery = this.value.toLowerCase(); // Convert search query to lowercase for case-insensitive comparison

    // Get all property items
    const propertyItems = document.querySelectorAll('.property-item');

    // Loop through each property item
    propertyItems.forEach(item => {
        const propertyTitle = item.querySelector('.card-title').innerText.toLowerCase(); // Get property title
        const propertyDescription = item.querySelector('.card-text').innerText.toLowerCase(); // Get property description

        // Check if property title or description contains the search query
        if (propertyTitle.includes(searchQuery) || propertyDescription.includes(searchQuery)) {
            item.style.display = 'block'; // Show the property item
        } else {
            item.style.display = 'none'; // Hide the property item
        }
    });
});

