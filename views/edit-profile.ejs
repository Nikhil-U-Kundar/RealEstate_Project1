                    <ion-icon name="home"></ion-icon>
                    <span><h1>VistaVillas</h1><br><h3>Luxurious living amidst scenic beauty and modern convenience.</h3></span>
                </p>
            </div>
            <div class="right-login">
                <div class="card-login">
                    <h1>Edit Profile</h1>
                    <div class="textfield">
                        <label for="username">Username</label>
                        <input type="text" id="username" name="username" placeholder="Enter your username" value="<%= user.username %>" required>
                    </div>
                    <div class="textfield">
                        <label for="phone">Phone</label>
                        <input type="text" id="phone" name="phone" placeholder="Enter your phone number" value="<%= user.phone %>" required>
                    </div>
                    <div class="textfield">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" placeholder="Enter your email" value="<%= user.email %>" required>
                    </div>
                    <div class="textfield">
                        <label for="gender">Gender</label>
                        <input type="text" id="gender" name="gender" placeholder="Enter your gender" value="<%= user.gender %>" required>
                    </div>
                    <div class="textfield">
                        <label for="profilePhoto">Profile Photo</label>
                        <input type="file" id="profilePhoto" name="profilePhoto">
                    </div>
                    <button type="submit" class="submit-btn">Save Changes</button>
                </div>
            </div>
        </div>
    </form>
